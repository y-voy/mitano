<div class="col-md-6 col-md-offset-3">
<h3><%= t('.title', resource: resource.model_name.human) %></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <p><%= f.text_field :name, class: "edit_profile_field" %></p>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "edit_profile_field" %></p>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <p><%= f.password_field :password, autocomplete: "new-password", class: "edit_profile_field" %></p>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <p><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "edit_profile_field" %></p>
  </div>

  <div class="field">
    <%= f.label :current_password %><br />
    (<%= t('view.need_cuurent_password') %>)
    <p><%= f.password_field :current_password, autocomplete: "current-password", class: "edit_profile_field" %></p>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <% if current_user.image && current_user.image.url %>
    <%= image_tag current_user.image.url, class: "edit-profile-image" %>
    <% end %>
    <p><%= f.file_field :image %></p>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <p><%= f.text_area :introduction, class: "edit_profile_field" %></p>
  </div>

  <div class="actions">
    <%= f.submit t('.update'), class: "btn-edit-profile" %>
  </div>
<% end %>
</div>
