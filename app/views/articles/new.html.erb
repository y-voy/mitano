<%= form_with(model: @article, local: true) do |form| %>
  <div class="article_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="article_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

